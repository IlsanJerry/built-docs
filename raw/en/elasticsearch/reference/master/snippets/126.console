POST /node/_search?filter_path=aggregations
{
  "aggs": {
    "ip": {
      "terms": {
        "field": "ip",
        "order": {"tm.v": "desc"}
      },
      "aggs": {
        "tm": {
          "top_metrics": {
            "metric": {"field": "v"},
            "sort": {"date": "desc"}
          }
        }
      }
    }
  }
}
