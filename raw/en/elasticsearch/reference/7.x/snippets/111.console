PUT /_index_template/new_logs_data_stream
{
  "index_patterns": [ "new_logs*" ],
  "data_stream": {
    "timestamp_field": "@timestamp"
  },
  "template": {
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date_nanos"                
        }
      }
    },
    "settings": {
      "sort.field": [ "@timestamp"],         
      "sort.order": [ "desc"]                
    }
  }
}
