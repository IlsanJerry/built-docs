PUT /_index_template/logs_data_stream
{
  "index_patterns": [ "logs*" ],
  "data_stream": {},
  "template": {
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "host": {
          "properties": {
            "ip": {
              "type": "ip",
              "ignore_malformed": true           
            }
          }
        }
      }
    }
  }
}
